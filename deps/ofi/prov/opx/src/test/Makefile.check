.PHONY : all clean
.DEFAULT_GOAL := all

ofi_root := ../../../../

testprog := test_hfi_select
srcfiles := test_hfi_select.c ../fi_opx_hfi_select.c

# strip out the dir to put all objfiles in this test/
objfiles := $(patsubst %.c,%.o,$(notdir $(srcfiles)))

%.o : ../%.c
	$(CC) -c $(CPPFLAGS) $(CFLAGS) -o $@ $<
fi_opx_hfi_select.o : ../fi_opx_hfi_select.c

# ofi_root needed to pick up config.h generated by configure
CFLAGS += -I$(ofi_root)/prov/opx/include -I$(ofi_root)/include -I$(ofi_root)

$(testprog) : $(objfiles)
	$(CC) $(CFLAGS) -lcheck -o $@ $^

all : $(testprog)

clean :
	-rm $(testprog) $(objfiles)

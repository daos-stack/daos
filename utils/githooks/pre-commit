#!/bin/bash
set -eu

hook=$(basename $0)
rm -f ".${hook}"

run-parts() {
    local dir="$1"
    shift

    for i in $(LC_ALL=C; echo ${dir%/}/*[^~,]); do
        # don't run vim .swp files
        [ "${i%.sw?}" != "${i}" ] && continue
        $i "$@"
    done
}

run-parts utils/githooks/${0##*/}.d "$@" 1>&2
touch ".${hook}"

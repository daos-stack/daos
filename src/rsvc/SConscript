"""Build rsvc"""
import daos_build

def scons():
    """Execute build"""
    Import('env')

    # rsvc-specific env
    denv = env.Clone()

    # ds_rsvc
    ds_rsvc = daos_build.library(denv, 'rsvc', ['srv.c',
                                                'srv_common.c',
                                                'rpc.c'])
    denv.Install('$PREFIX/lib/daos_srv', ds_rsvc)

if __name__ == "SCons.Script":
    scons()

"""Build client tests"""


def scons():
    """Execute build"""
    Import('denv')

    libs = ['daos', 'daos_common', 'gurt', 'cart', 'pthread', 'cmocka']
    if GetOption("test_coverage"):
        libs += ['gcov']

    eq_tests = denv.d_test_program('eq_tests', 'eq_tests.c', LIBS=libs)
    agent_tests = denv.d_test_program('agent_tests', 'agent_tests.c', LIBS=libs)
    job_tests = denv.d_test_program('job_tests', 'job_tests.c', LIBS=libs)

    denv.Install('$PREFIX/bin/', [eq_tests, agent_tests, job_tests])


if __name__ == "SCons.Script":
    scons()

"""Build versioned extent allocator"""
import os
import daos_build

def scons():
    """Execute build"""
    Import('env', 'prereqs')

    env.AppendUnique(LIBPATH=[Dir('.')])

    denv = env.Clone()
    prereqs.require(denv, 'pmdk')

    denv.Library('vea', Glob('*.c'), LIBS=['daos_common', 'gurt'])

    SConscript('tests/SConscript', exports='denv')

if __name__ == "SCons.Script":
    scons()

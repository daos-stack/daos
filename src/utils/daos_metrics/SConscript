"""DAOS metrics utility"""


def scons():
    """Execute build"""
    Import('env')

    denv = env.Clone()

    libs = ['gurt']
    if GetOption("test_coverage"):
        libs += ['gcov']
    daos_metrics = denv.d_program('daos_metrics', ['daos_metrics.c'], LIBS=libs)

    denv.Install('$PREFIX/bin', daos_metrics)


if __name__ == "SCons.Script":
    scons()
